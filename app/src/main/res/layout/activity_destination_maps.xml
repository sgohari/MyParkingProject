<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:andoir="http://schemas.android.com/apk/res/android"
    andoir:layout_width="match_parent"
    andoir:layout_height="match_parent"
    andoir:orientation="vertical"
    andoir:background="@drawable/gradient"
    >

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="461dp"
        map:uiZoomControls="true"
        tools:context=".DestinationMapsActivity" />


    <Button
        andoir:id="@+id/btnReserveNowD"
        andoir:layout_width="144dp"
        andoir:layout_height="wrap_content"
        andoir:layout_alignParentBottom="true"
        andoir:layout_alignParentEnd="true"
        andoir:layout_marginEnd="23dp"
        andoir:onClick="Moving_Reseration"
        andoir:text="@string/btn_reservation" />

    <Button
        andoir:id="@+id/btnBack"
        andoir:layout_width="144dp"
        andoir:layout_height="wrap_content"
        andoir:layout_alignParentBottom="true"
        andoir:layout_alignParentStart="true"
        andoir:onClick="move_Back"
        andoir:text="Back" />
</RelativeLayout>